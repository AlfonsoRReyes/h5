ifdef LIB_HDF5
	WINC = "${LIB_HDF5}/include"
	WLIB = "${LIB_HDF5}/lib${R_ARCH}"
else
	WINC = ../inst/include
	WLIB = "lib${R_ARCH}"
endif

PKG_LIBS = -L${WLIB} -lhdf5_cpp -lhdf5 -lz -lm
PKG_CXXFLAGS += -I${WINC}/hdf5 -I${WINC}/hdf5_cpp -I${WINC}/hdf5_hl -I${WINC}/hdf5_hl_cpp -I${WINC}/cmakeconf
CXX_STD = CXX11
